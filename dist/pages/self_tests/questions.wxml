<!--pages/self_tests/questions.wxml-->
<wxs src="../../utils/utils.wxs" module="tools"/>

<view class="page">
    <view class="page__hd">
        <view class="page__title">{{test_title}}</view>
    </view>
    <view class="page__bd page__bd_spacing">
        <view class="kind-list">
            <block wx:for="{{questions}}" wx:key="id">
                <view class="kind-list__item">
                    <view id="{{item.id}}" class="weui-flex kind-list__item-hd {{item.open ? 'kind-list__item-hd_show' : ''}}" bindtap="kindToggle">
                        <view class="weui-flex__item">{{item.title}}</view>
                    </view>
                    <view class="kind-list__item-bd {{item.open ? 'kind-list__item-bd_show' : ''}}">
                        <view class="weui-cells {{item.open ? 'weui-cells_show' : ''}}">
                            <block wx:for="{{item.options}}" wx:for-item="option" wx:key="id">
                                <view class="weui-cell weui-cell_access ">
                                <view class="">{{tools.num2letter(index)}} {{option.option}}: </view>
                                <view class="">{{option.option}}</view>
                                </view>
                                
                            </block>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>
    <view class="weui-btn-area" wx:if="{{questions.length < 100}}">
    <navigator url="/pages/self_questions/create?test_id={{test_id}}&title={{test_title}}">
            <button class="weui-btn" type="primary">添加一个题目</button>
    </navigator>
    </view>
</view>